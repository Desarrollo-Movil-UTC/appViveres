<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_fondo"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Viveres Primavera"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="353dp"
                android:layout_height="264dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/logo2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:background="@drawable/bordes_redondeado"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center_horizontal"
                    android:text="Bienvenidos"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtEmailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/texto_form"
                    android:drawableLeft="@drawable/ic_email"
                    android:ems="10"
                    android:hint="  Ingrese su email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/txtPasswordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/texto_form"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:hint="  Ingrese su contraseña"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="#87d469"
                    android:drawableLeft="@android:drawable/ic_media_play"
                    android:onClick="iniciarSesion"
                    android:paddingTop="0sp"
                    android:text="Iniciar Sesión"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:cornerRadius="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="#eb5c5b"
                    android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                    android:onClick="abrirRegistro"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:text="Registrarme"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>