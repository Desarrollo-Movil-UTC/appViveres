<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProveedoresActivity">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/color_fondo"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="693dp"
            android:background="@drawable/bordes_redondeado"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Detalle del Proveedor"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <ImageView
                android:id="@+id/imgProveedor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <TextView
                android:id="@+id/txtID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="id"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="nombre"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="Descripcion"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="Telefono"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCelular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="Celular"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="E-mail"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDiasVisita"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/texto_form"
                android:drawablePadding="12dp"
                android:ems="10"
                android:paddingLeft="20sp"
                android:text="Dias de Visita"
                android:textColor="#6E7692"
                android:textColorHint="#6E7692"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#87d469"
                android:drawableLeft="?attr/homeAsUpIndicator"
                android:onClick="salirDetalleProveedores"
                android:text="Salir"
                android:textColor="#FFFF"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:iconPadding="2dp" />

        </LinearLayout>
    </LinearLayout>

  </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>