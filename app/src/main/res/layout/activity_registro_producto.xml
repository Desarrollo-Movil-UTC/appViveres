<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroProductoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_fondo"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    app:srcCompat="@drawable/logo2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="506dp"
                android:background="@drawable/bordes_redondeado"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_horizontal"
                    android:text="Registro de Productos"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="402dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtNombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ingrese producto"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtFechaCaducidadProducto"
                            android:layout_width="247dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:drawableLeft="@android:drawable/ic_menu_day"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:focusable="false"
                            android:hint="Fecha de Caducidad"
                            android:inputType="none"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnFechaCaducidadProducto"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#FF6E40"
                            android:drawableLeft="@android:drawable/ic_menu_month" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="178dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="     Cantidad"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/txtCantidadProducto"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint="0"
                                android:inputType="number"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="178dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView37"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="     Precio Unitario"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/txtPrecioProducto"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint=" 00,00"
                                android:inputType="numberDecimal"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/FotoProducto"
                                android:layout_width="172dp"
                                android:layout_height="88dp"
                                android:layout_weight="1"
                                tools:srcCompat="@drawable/fondo_img_producto" />

                            <TextView
                                android:id="@+id/txtFotoProducto"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_weight="1"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:paddingTop="5sp"
                                android:text="URL imagen"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:id="@+id/btnFotoProducto"
                                android:layout_width="wrap_content"
                                android:layout_height="62dp"
                                android:layout_weight="1"
                                android:backgroundTint="#FF6E40"
                                android:text="Seleccione imagen" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtDescripcionProducto"
                                android:layout_width="172dp"
                                android:layout_height="151dp"
                                android:layout_marginBottom="10dp"
                                android:drawableStart="?attr/actionModePasteDrawable"
                                android:drawablePadding="10dp"
                                android:ems="10"
                                android:hint=" Ingrese descripción"
                                android:inputType="textMultiLine" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#4B9230"
                        android:onClick="guardarRegistroProducto"
                        android:text="Guardar"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#92304B"
                        android:onClick="LimpiarRegistroProducto"
                        android:text="cancelar"
                        android:textSize="18sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#FF6E40"
                    android:drawableLeft="@android:drawable/ic_menu_revert"
                    android:onClick="volverProductos"
                    android:text="volver"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>